RewriteEngine On

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Block access to sensitive files
<FilesMatch "\.(env|log|sql|sqlite|md|txt|lock|phar)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to vendor and storage directories (but allow for local development)
# RedirectMatch 403 ^/vendor/.*$
# RedirectMatch 403 ^/storage/.*$
# RedirectMatch 403 ^/bootstrap/.*$
# RedirectMatch 403 ^/config/.*$
# RedirectMatch 403 ^/database/.*$
# RedirectMatch 403 ^/resources/.*$
# RedirectMatch 403 ^/routes/.*$
# RedirectMatch 403 ^/app/.*$

# Block access to hidden files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Allow PHP files for local development
# <FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
#     Order allow,deny
#     Deny from all
# </FilesMatch>

# Allow access to all files for local development
# <Files "index.php">
#     Order allow,deny
#     Allow from all
# </Files>

RewriteRule ^(.*)$ public/$1 [L] 